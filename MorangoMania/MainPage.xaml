<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MorangoMania.MainPage">
    <StackLayout>

        <StackLayout Padding="30" Spacing="20">
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center"/>
        <Image Source="MorangoMania.png" WidthRequest="50" HeightRequest="50"/>
        <Label Text="Morango Mania"
               FontSize="24"
               VerticalOptions="Center"
               Margin="10,0,0,0"/>
    </StackLayout>
    
    <SearchBar Placeholder="Buscar Produtos"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="CenterAndExpand"/>
    <!-- Botão de Login -->
    <Button Text="Login"
            BackgroundColor="Red"
            TextColor="White"
            FontSize="18"
            CornerRadius="10"
            HorizontalOptions="FillAndExpand"/>
    <!-- Botão de Registro -->
    <Button Text="Registro"
            BackgroundColor="Red"
            TextColor="White"
            FontSize="18"
            CornerRadius="10"
            HorizontalOptions="FillAndExpand"/>
    </StackLayout>

</ContentPage>
